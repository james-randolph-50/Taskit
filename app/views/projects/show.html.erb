<h2><%= @project.name %></h2>
        <%= form_for [@project, @task] do |f| %>
        <%= f.hidden_field :project_id, value: @project.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.label :notes %>: <%= f.text_field :notes %>
        <%= f.submit "Add Task" %>
    <% end %>

<% if @project.tasks.any? %>
  <table class="table">
    <tr>
      <th>Task</th>
    </tr>
    <% @project.tasks.each do |task| %>
      <tr>
        <td>
          <% if task.notes %>
          <%= link_to task.notes, [@project, task] :class => "task_notes" %>
          <%= task.status %>
          <% end %>
        </td>
      </tr>
    <% end %>

  </table>
<% end %>

<h4>Project with most Tasks:</h4>
<%= Project.most.name %>

<br><br>


<%= link_to "Edit Project", edit_project_path(@project) %> | <%= link_to "Delete Project", project_path(@project), method: :delete %>

